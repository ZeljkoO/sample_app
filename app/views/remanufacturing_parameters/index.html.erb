<h1>Parameters for Recoverable Products</h1>
<table class="table" id="remanufacturing_parameters">
  <tr>
    <th>Product</th>
    <th>Family</th>
    <th>Remanufacturing Cost</th>
    <th>Remanufacturing Time</th>
    <th>Setup Cost</th>
    <th>Setup Time</th>
    <th>Holding Cost</th>
    <th>Initial Inventory</th>
    <th></th>
    <th></th>
  </tr>

  <% @remanufacturing_parameters.each do |remanufacturing_parameter| %>
      <tr>
        <td><%= remanufacturing_parameter.product.name %></td>
        <td><%= remanufacturing_parameter.product.product_family %></td>
        <td><%= best_in_place remanufacturing_parameter, :remanufacturing_cost, :type => :input %></td>
        <td><%= best_in_place remanufacturing_parameter, :remanufacturing_time, :type => :input %></td>
        <td><%= best_in_place remanufacturing_parameter, :setup_cost, :type => :input %></td>
        <td><%= best_in_place remanufacturing_parameter, :setup_time, :type => :input %></td>
        <td><%= best_in_place remanufacturing_parameter, :holding_cost, :type => :input %></td>
        <td><%= best_in_place remanufacturing_parameter, :initial_inventory, :type => :input %></td>
        <td><%= link_to 'Edit', edit_remanufacturing_parameter_path(remanufacturing_parameter) %></td>
        <td><%= link_to 'Delete', remanufacturing_parameter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

