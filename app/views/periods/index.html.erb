<h1>Index of Periods</h1>
<table class="table" id="periods">
  <tr>
    <th>Period</th>
    <th>Production Capacity</th>
    <th>Remanufacturing Capacity</th>
    <th></th>
    <th></th>

  </tr>

  <% @periods.each do |period| %>
      <tr>
        <td><%= period.number %></td>
        <td><%= best_in_place period, :capacity, :type => :input %></td>
        <td><%= best_in_place period, :remanufacturing_capacity, :type => :input %></td>
        <td><%= link_to 'Edit', edit_period_path(period) %></td>
        <td><%= link_to 'Delete', period, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

