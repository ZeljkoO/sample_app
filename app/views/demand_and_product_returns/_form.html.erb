<div class="row">
  <div class="span6 offset3">
    <%= form_for(@demand_and_product_return) do |f| %>
        <% if @demand_and_product_return.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@demand_and_product_return.errors.count, "error") %> prohibited this production_parameter from being saved:</h2>

              <ul>
                <% @demand_and_product_return.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field">
          <%= f.label 'Select Period' %><br />
          <%= f.collection_select :period_id, Period.all, :id, :number %>
        </div>
        <div class="field">
          <%= f.label 'Select Product' %><br />
          <%= f.collection_select :product_id, Product.all, :id, :name %>
        </div>
        <div class="field">
          <%= f.label 'Demand' %><br />
          <%= f.text_field :demand %>
        </div>
        <div class="field">
          <%= f.label 'Return' %><br />
          <%= f.text_field :return %>
        </div>
        <div class="actions">
          <%= f.submit 'Save Demand and Returns' %>
        </div>
    <% end %>
  </div>
</div>