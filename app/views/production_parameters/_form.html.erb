          <%= f.text_field :setup_cost %>
        </div>
        <div class="field">
          <%= f.label 'Setup Time' %><br />
          <%= f.text_field :setup_time %>
        </div>
        <div class="field">
          <%= f.label 'Holding Cost' %><br />
          <%= f.text_field :holding_cost %>
        </div>
        <div class="field">
          <%= f.label 'Initial Inventory' %><br />
